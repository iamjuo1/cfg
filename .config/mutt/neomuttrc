set index_format  = " %{%b %d} [%e/%E] %-16.16L %s # %g"
set send_charset  = utf-8
set header_cache  = /tmp
set sort          = reverse-last-date
set use_threads   = threads
set collapse_all  = yes
set markers       = false
set sleep_time    = 0
set status_on_top = true
set fast_reply
set include

# Bindings
macro index D "<modify-tags> +delete  -inbox -archive <enter>" "Delete"
macro index U "<modify-tags> -delete  +inbox          <enter>" "Undelete"
macro index A "<modify-tags> +archive -inbox -delete  <enter>" "Archive"

bind index        X delete-message
bind index        a noop
bind index        d display-message
bind index        S sync-mailbox
bind index,attach g first-entry
bind index,attach G last-entry
bind index,attach s next-entry
bind index,attach w previous-entry
bind pager,attach a exit
bind pager        s next-line
bind pager        w previous-line
bind pager        g top
bind pager        G bottom
bind pager        d view-attachments
bind attach       d view-mailcap
bind attach       S save-entry
bind index,pager  p sidebar-prev
bind index,pager  n sidebar-next
bind index,pager  o sidebar-open
bind index,pager  . sidebar-toggle-visible
bind index        / vfolder-from-query
bind index  <space> collapse-thread

# Mailcap
set mailcap_path = ~/.config/mutt/mailcap
alternative_order text/plain text/html
auto_view text/markdown
auto_view text/html
auto_view application/json
auto_view application/pgp-signature
auto_view multipart/signed

# Sidebar
set mail_check_stats = true
set sidebar_width    = 18
set sidebar_format   = ' %N/%S %* %D '

# Colors
color error         brightred     default
color index         magenta       default
color index_date    magenta       default
color index_author  yellow        default
color index_subject blue          default
color index_tags    default       default
color indicator     underline     default default
color status        brightwhite   default
color attachment    brightmagenta default
color header        brightblue    default
color quoted        green         default
